generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DB_URL")
  shadowDatabaseUrl = env("SHADOW_DB_URL")
}

model Artist {
  id     String  @id @default(cuid())
  name   String  @unique
  slug   String  @unique
  albums Album[]
}

model Album {
  coverArt    String
  id          String       @id @default(cuid())
  isAPlus     Boolean      @default(false)
  lastPlayed  DateTime?
  owned       Boolean      @default(false)
  ownedDate   DateTime?
  releaseDate DateTime
  slug        String       @unique
  title       String
  appleMusicUrl String?
  spotifyUri    String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @default(now()) @updatedAt
  artist        Artist[]
  descriptors   Descriptor[]
  genres        Genre[]
}

model Genre {
  id     String  @id @default(cuid())
  name   String  @unique
  slug   String  @unique
  albums Album[]
}

model Descriptor {
  id     String  @id @default(cuid())
  name   String  @unique
  slug   String  @unique
  albums Album[]
}
