// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Artist {
  albums Album[]
  id     String  @id @default(cuid())
  name   String  @unique
  slug   String  @unique
}

model Album {
  artist      Artist[]
  coverArt    String
  descriptors Descriptor[]
  genres      Genre[]
  id          String       @id @default(cuid())
  isAPlus     Boolean      @default(false)
  lastPlayed  DateTime?
  owned       Boolean      @default(false)
  ownedDate   DateTime?
  releaseDate DateTime
  slug        String       @unique
  title       String
}

model Genre {
  albums Album[]
  id     String  @id @default(cuid())
  name   String  @unique
  slug   String  @unique
}

model Descriptor {
  albums Album[]
  id     String  @id @default(cuid())
  name   String  @unique
  slug   String  @unique
}
